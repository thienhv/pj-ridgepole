# -*- mode: ruby -*-
# vi: set ft=ruby :

create_table "articles", force: :cascade do |t|
  t.string   "title"
  t.text     "desc", renamed_from: "content"
  t.datetime "created_at"
  t.datetime "updated_at"
end

create_table "comments", force: :cascade do |t|
  t.string   "commenter"
  t.text     "body"
  t.integer  "article_id"
  t.datetime "created_at"
  t.datetime "updated_at"
end
